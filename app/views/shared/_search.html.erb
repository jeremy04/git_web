<%= render partial: "shared/search_js" %>
<%= form_tag(search_path, method: 'get', class: 'form-inline', role: 'form') do %>
  <div class="form-group">
    <%= label_tag 'search','Search' %>
    <%= text_field_tag 'commit_hash', nil, placeholder: 'Enter commit hash...' %>
    <%= select_tag "author", options_from_collection_for_select(@authors, "name", "name"), prompt: "Select author" %>
    <%= text_field_tag 'committed_at', nil, placeholder: 'Click to select date...' %>
  </div>
  <%= submit_tag "Search", class: 'btn btn-primary' %>
<% end %>